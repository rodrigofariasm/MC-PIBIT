# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Login
GET   /login						controllers.Application.login()
GET   /cadastro                     controllers.Application.cadastro()
POST  /login                        controllers.Application.tentaLogin()
POST  /cadastro                     controllers.Application.cadastramento()

#Pos-Login
GET   /selCarona                    controllers.Sistema.selecionarTipo()
POST  /selCarona                    controllers.Sistema.selecionadoTipo()
GET   /espec                        controllers.Sistema.especifica(String)
POST  /espec                        controllers.Sistema.especificado(String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
